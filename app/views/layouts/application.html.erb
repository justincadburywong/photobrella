<!DOCTYPE html>
<html>
  <head>
    <title>Photobrella</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>

            <% if user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link" href="" id="slideshow">Slideshow</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%=edit_user_registration_path%>">Settings</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%=destroy_user_session_path%>" data-method="delete">Logout</a>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link" href="<%=new_user_registration_path%>">Sign Up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%=new_user_session_path%>">Login</a>
              </li>
            <% end %>
          </ul>
          <form class="form-inline mt-2 mt-md-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Filter" aria-label="Filter" id="filter">
            <!-- <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button> -->
          </form>
        </div>
      </nav>
    </div>

    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div>
      <%= yield %>
    </div>

  </body>
</html>
